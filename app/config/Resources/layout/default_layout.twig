<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="ie=edge" http-equiv="X-UA-Compatible">

    <title>
      {% block title %}{% endblock %}
      | Eatery</title>

    <link href="{{assets}}/img/logo_eatery.png" rel="shortcut icon">
    <link href="/manifest.json" rel="manifest">


    <!--Fonts Google-->
    <link href="//fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Amaranth:300,400,500,600,700" rel="stylesheet">

    <!-- CSS Implementing Plugins -->
    <link href="{{assets}}/vendor/font-awesome/css/fontawesome-all.min.css" rel="stylesheet">
    <link href="{{assets}}/vendor/custombox/dist/custombox.min.css" rel="stylesheet">
    <link href="{{assets}}/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="{{assets}}/vendor/hs-megamenu/src/hs.megamenu.css" rel="stylesheet">
    <link href="{{assets}}/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" rel="stylesheet">
    <link href="{{assets}}/vendor/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <link href="{{assets}}/vendor/fancybox/jquery.fancybox.css" rel="stylesheet">
    <link href="{{assets}}/vendor/slick-carousel/slick/slick.css" rel="stylesheet"> {% block cssPlugins %}{% endblock %}

    <!-- CSS Front Template -->
    <link href="{{assets}}/css/theme.css" rel="stylesheet">

    <!-- Firebase aitheria -->
    <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase-firestore.js"></script>

    <script src="{{assets}}/vendor/firebase/dist/firebase.js"></script>

    <!-- vuejs aitheria -->
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.min.js"></script>
    <script src="https://cdn.jsdelivr.net/vue.resource/1.3.1/vue-resource.min.js"></script>
    <script>
      Vue.config.devtools = true
    </script>
  </head>
  <body class="u-custombox-no-scroll bg-light overflow-hidden">
    <div class="page-preloader bg-primary" id="jsPreloader">
      <div class="page-preloader__content-centered">
        <img src="{{assets}}/img/logo_eatery.png" width="100px">
        <div class="spinner-border text-warning" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
    </div>
    <!-- End Page Preloader -->
    {% block body %}
      {% block header %}{% endblock %}
      {% block container %}{% endblock %}
      {% block footer %}{% endblock %}
    {% endblock %}

    <!-- JS Global Compulsory -->
    {% block jsGlobal %}
      <script src="{{assets}}/vendor/jquery/dist/jquery.min.js"></script>
      <script src="https://unpkg.com/default-passive-events"></script>
      <script src="{{assets}}/vendor/jquery-migrate/dist/jquery-migrate.min.js"></script>
      <script src="{{assets}}/vendor/popper.js/dist/umd/popper.min.js"></script>
      <script src="{{assets}}/vendor/bootstrap/bootstrap.min.js"></script>
    {% endblock %}

    <!-- JS Implementing Plugins -->
    {% block jsPlugins %}
      {% block addJsPlugins %}{% endblock %}
    {% endblock %}

    <!-- JS Front -->
    {% block jsFront %}
      {% block addJsFront %}{% endblock %}
    {% endblock %}

    <!-- Js App Vue -->
    <script src="/src/js/app.js"></script>
    {% block appScript %}{% endblock %}

    <!-- JS Plugins Init. -->
    {% block jsInit %}
      {% block addJsInit %}{% endblock %}
    {% endblock %}

  </body>
</html>
