{% extends "dashboard_layout.twig" %}
{% block title %}Home
{% endblock %}
{% block container %}
  <!-- ========== MAIN ========== -->
  <main id="appRestaurant" role="main">
    <!-- Content Section -->
    <div class="bg-light">
      <div class="container space-3 space-lg-4">
        <!-- Card -->
        <div class="card card-frame mb-7">
          <a class="card-body p-4" href="javascript:void(0)">
            <div class="media align-items-center">
              <div class="u-avatar mr-3">
                <img class="img-fluid" src="https://image.flaticon.com/icons/svg/1847/1847252.svg" alt="Image Description">
              </div>
              <div class="media-body">
                <span class="text-dark">Restaurantes</span>
                <small class="d-block text-secondary">Total Registrado</small>
              </div>
              <div class="media-body text-right">
                <span class="text-primary mx-3 h1">
                  ([Restaurants.length])
                </span>
              </div>
            </div>
          </a>
        </div>

        <div class="container-fluid">
          <div class="text-center my-6">
            <span class="u-divider u-divider--text">Registros de Restaurantes</span>
          </div>
          <!-- End Card -->
          <div class="row">
            <div class="col-6">
              <!-- Search -->
              <div class="js-focus-state input-group input-group-sm mb-4">
                <div class="input-group-prepend">
                  <span class="input-group-text border-0 bg-primary text-white">
                    <span class="fas fa-search"></span>
                  </span>
                </div>
                <input class="form-control border-0" id="datatableSearch" type="text" placeholder="Buscar Restaurante" aria-label="Search restaurant"
                  v-modal="search">
              </div>
              <!-- End Search -->
            </div>
            <div class="col">
              <!-- new -->
              <a class="btn btn-sm btn-soft-success transition-3d-hover" href="javascript:void(0);"
                data-target="#formRestaurantModal"
                data-toggle="modal"
                @click="Restaurant=[]">
                <i class="fas fa-plus-circle"></i>
                AÃ±adir
              </a>
              <!-- End new -->
            </div>
          </div>
          <div class="table-responsive-md u-datatable"
            v-show="Restaurants.length">
            <table class="table table-dark rounded-bottom mb-5">
              <thead>
                <tr class="text-uppercase font-size-1">
                  <th class="font-weight-medium" scope="col">
                    <div class="d-flex justify-content-between align-items-center">
                      Order
                    </div>
                  </th>
                  <th class="font-weight-medium" scope="col">
                    <div class="d-flex justify-content-between align-items-center">
                      Restaurante
                    </div>
                  </th>
                  <th class="font-weight-medium" scope="col">
                    <div class="d-flex justify-content-between align-items-center">
                      Ubicacion
                    </div>
                  </th>
                  <th class="font-weight-medium" scope="col">
                    <div class="d-flex justify-content-between align-items-center">
                      Telefono
                    </div>
                  </th>
                  <th class="font-weight-medium" scope="col">
                    <div class="d-flex justify-content-between align-items-center">
                      Correo
                    </div>
                  </th>
                  <th class="font-weight-medium" scope="col">
                    <div class="d-flex justify-content-between align-items-center">
                      Ajustes
                      <div class="ml-2">
                        <span class="fas fa-tools"></span>
                      </div>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody class="font-size-1">
                <tr
                  v-for="(Restaurant, index) in  Restaurants">
                  <td class="align-middle text-secondary font-weight-normal">
                    (['R00'+(index+1)])
                  </td>
                  <td>
                    <span>
                      ([Restaurant.name])
                    </span>
                  </td>
                  <td class="align-middle text-warning">
                    ([Restaurant.location])
                  </td>
                  <td class="align-middle text-secondary">
                    ([Restaurant.phone])
                  </td>
                  <td class="align-middle text-danger">
                    ([Restaurant.email])
                  </td>
                  <td class="align-middle text-center">
                    <a class="text-warning mr-2" href="javascript:void(0)" title="Editar"
                      data-target="#formRestaurantModal"
                      data-toggle="modal"
                      @click="editRestaurant(Restaurant.id)">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a class="text-danger mr-2" href="javascript:void(0)" title="Eliminar"
                      data-target="#alertDeleteModal"
                      data-toggle="modal"
                      @click="deleteRestaurant(Restaurant.id, Restaurant.name)">
                      <i class="fas fa-trash-alt"></i>
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- End Content Section -->
    {% include "/restaurants/formRestaurant.twig" %}
  </main>
  <!-- ========== END MAIN ========== -->
{% endblock %}

{% block appScript %}
<script src="/src/js/appRestaurant.js"></script>
{% endblock %}
